<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".GuestVoteActivity"
    android:paddingVertical="20dp"
    android:paddingHorizontal="20dp"
    android:layout_gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="2"
        android:gravity="center">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/question_label"
            android:paddingHorizontal="20dp"
            >
        <TextView
            android:id="@+id/choose_preference"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="20dp"
            android:text="Choose Your Song Preference"
            android:textSize="23sp"
            android:textStyle="bold" />

        <com.google.android.material.progressindicator.LinearProgressIndicator
            android:id="@+id/time_skip"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            app:layout_constraintTop_toBottomOf="@id/choose_preference"
            app:layout_constraintStart_toStartOf="@id/choose_preference"
            app:layout_constraintEnd_toEndOf="@id/choose_preference"
            app:trackThickness="28dp" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:id="@+id/top_kahoot"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="2"
            android:paddingTop="30dp">
            <LinearLayout
                android:id="@+id/kahoot_ll_one"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:background="@color/purple_background_highlight"
                android:padding="10dp"
                android:layout_marginHorizontal="5dp">

                <ImageButton
                    android:id="@+id/one_kahoot"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/songcover_heroestonight"
                    android:background="@null"/>
                <TextView
                    android:id="@+id/title_one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/songcover_name2"
                    android:textSize="18sp"
                    android:paddingTop="5dp"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:maxLines="1"/>
                <TextView
                    android:id="@+id/artist_one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/songcover_artist2"
                    android:textSize="14sp"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:maxLines="1"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/kahoot_ll_two"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:background="@color/purple_background_highlight"
                android:padding="10dp"
                android:layout_marginHorizontal="5dp">

                <ImageButton
                    android:id="@+id/two_kahoot"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/songcover_invincible"
                    android:background="@null"/>
                <TextView
                    android:id="@+id/title_two"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/songcover_name3"
                    android:textSize="18sp"
                    android:paddingTop="5dp"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:maxLines="1"/>

                <TextView
                    android:id="@+id/artist_two"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/songcover_artist3"
                    android:textSize="14sp"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:maxLines="1"/>

            </LinearLayout>

        </LinearLayout>



        <LinearLayout
            android:id="@+id/bottom_kahoot"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="2"
            android:paddingTop="20dp">
            <LinearLayout
                android:id="@+id/kahoot_ll_three"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:background="@color/purple_background_highlight"
                android:padding="10dp"
                android:layout_marginHorizontal="5dp">

                <ImageButton
                    android:id="@+id/three_kahoot"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/songcover_myheart"
                    android:background="@null"/>
                <TextView
                    android:id="@+id/title_three"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/songcover_name4"
                    android:textSize="18sp"
                    android:paddingTop="5dp"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:maxLines="1"/>
                <TextView
                    android:id="@+id/artist_three"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/songcover_artist4"
                    android:textSize="14sp"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:maxLines="1"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/kahoot_ll_four"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:background="@color/purple_background_highlight"
                android:padding="10dp"
                android:layout_marginHorizontal="5dp">

                <ImageButton
                    android:id="@+id/four_kahoot"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/songcover_blank"
                    android:background="@null"/>
                <TextView
                    android:id="@+id/title_four"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/songcover_name5"
                    android:textSize="18sp"
                    android:paddingTop="5dp"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:maxLines="1"/>

                <TextView
                    android:id="@+id/artist_four"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/songcover_artist5"
                    android:textSize="14sp"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:maxLines="1"/>

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>